<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    android:layout_margin="8dp"
    android:padding="12dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp">

        <!-- Stadium and Date -->
        <TextView
            android:id="@+id/stadiumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eden Gardens, Kolkata"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/matchDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LIVE - 22 March, Saturday"
            android:textSize="14sp"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <!-- Toss & Decision -->
        <TextView
            android:id="@+id/matchDecision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CSK chose to bat"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"/>

        <!-- Match Details Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="8dp">

            <!-- Team 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/team1Logo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:id="@+id/team1Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CSK"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/team1Score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="145/3 (15.4)"
                    android:textSize="14sp"
                    android:textColor="@android:color/holo_blue_dark"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Vertical Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:background="@android:color/darker_gray"
                android:layout_marginHorizontal="12dp"/>

            <!-- LIVE Indicator -->
            <TextView
                android:id="@+id/liveIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LIVE"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_red_dark"
                android:gravity="center"
                android:layout_marginHorizontal="8dp"/>

            <!-- Vertical Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:background="@android:color/darker_gray"
                android:layout_marginHorizontal="12dp"/>

            <!-- Team 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/team2Logo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:id="@+id/team2Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RCB"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/team2Score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yet to bat"
                    android:textSize="14sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:gravity="center"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
