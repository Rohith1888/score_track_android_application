<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- IPL Banner -->
        <ImageView
            android:id="@+id/ipl_banner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/ipl_banner" />

        <!-- Top Matches Section -->
        <TextView
            android:id="@+id/top_matches_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top Matches"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <!-- Horizontal Scroll for Match Cards -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp">

                <!-- Match Card 1 -->
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    android:background="@drawable/match_card_bg"
                    android:padding="12dp"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1st T20 : KKR VS RCB"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Eden Gardens, Kolkata, 22 March, Saturday"
                        android:textSize="12sp"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <!-- Match Card 2 -->
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    android:background="@drawable/match_card_bg"
                    android:padding="12dp"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2nd T20 : SRH VS RR"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rajiv Gandhi International Stadium, Hyderabad, 23 March, Sunday"
                        android:textSize="12sp"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <!-- Match Card 3 (Example Extra Card) -->
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    android:background="@drawable/match_card_bg"
                    android:padding="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3rd T20 : MI VS CSK"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wankhede Stadium, Mumbai, 24 March, Monday"
                        android:textSize="12sp"
                        android:textColor="@android:color/white" />
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>
        <!-- Top Stories Section -->
        <TextView
            android:id="@+id/top_stories_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top Stories"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <!-- Horizontal Scroll for News Cards -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- News Item 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/news1_image"
                            android:scaleType="centerCrop"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/rounded_image" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Virat Kohli’s 12k dream turns into nightmare."
                            android:textSize="14sp"
                            android:textColor="@android:color/black"
                            android:gravity="center_vertical"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- News Item 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/news2_image"
                            android:scaleType="centerCrop"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/rounded_image" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Rohit Sharma’s tactical brilliance stuns Australia."
                            android:textSize="14sp"
                            android:textColor="@android:color/black"
                            android:gravity="center_vertical"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- News Item 3 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/news3_image"
                            android:scaleType="centerCrop"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/rounded_image" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="MS Dhoni leadership masterclass inspires young talents."
                            android:textSize="14sp"
                            android:textColor="@android:color/black"
                            android:gravity="center_vertical"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>


    </LinearLayout>

</ScrollView>
