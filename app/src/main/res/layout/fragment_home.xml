<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- IPL Banner -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/ipl_banner_slider"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:autoSizeTextType="uniform"/>


        <!-- Top Matches Section -->
        <TextView
            android:id="@+id/top_matches_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top Matches"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <!-- Horizontal Scroll for Match Cards -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingVertical="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Match Card 1 -->
                <LinearLayout
                    android:layout_width="220dp"
                    android:layout_height="140dp"
                    android:background="@drawable/match_card_bg"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp"
                    android:elevation="6dp"

                    android:radius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="6dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/kkr_logo"
                            android:scaleType="fitCenter" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KKR vs RCB"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Eden Gardens, Kolkata"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22 March, Saturday"
                        android:textSize="12sp"
                        android:textColor="@android:color/holo_orange_light"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- Match Card 2 -->
                <LinearLayout
                    android:layout_width="220dp"
                    android:layout_height="140dp"
                    android:background="@drawable/match_card_bg"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp"
                    android:elevation="6dp"
                    android:radius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="6dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/srh_logo"
                            android:scaleType="fitCenter" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SRH vs RR"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rajiv Gandhi Intl. Stadium"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="23 March, Sunday"
                        android:textSize="12sp"
                        android:textColor="@android:color/holo_orange_light"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- Match Card 3 -->
                <LinearLayout
                    android:layout_width="220dp"
                    android:layout_height="140dp"
                    android:background="@drawable/match_card_bg"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:elevation="6dp"
                    android:radius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="6dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/mi_logo"
                            android:scaleType="fitCenter" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MI vs CSK"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wankhede Stadium, Mumbai"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24 March, Monday"
                        android:textSize="12sp"
                        android:textColor="@android:color/holo_orange_light"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Top Stories Section -->
        <TextView
            android:id="@+id/top_stories_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top Stories"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <!-- Horizontal Scroll for News Cards -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- News Item 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/news1_image"
                            android:scaleType="centerCrop"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/rounded_image" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Virat Kohli’s 12k dream turns into nightmare."
                            android:textSize="14sp"
                            android:textColor="@android:color/black"
                            android:gravity="center_vertical"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- News Item 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/news2_image"
                            android:scaleType="centerCrop"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/rounded_image" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Rohit Sharma’s tactical brilliance stuns Australia."
                            android:textSize="14sp"
                            android:textColor="@android:color/black"
                            android:gravity="center_vertical"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- News Item 3 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/news3_image"
                            android:scaleType="centerCrop"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/rounded_image" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="MS Dhoni leadership masterclass inspires young talents."
                            android:textSize="14sp"
                            android:textColor="@android:color/black"
                            android:gravity="center_vertical"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>


    </LinearLayout>

</ScrollView>
