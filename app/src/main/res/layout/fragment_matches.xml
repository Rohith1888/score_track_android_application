<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/cricket_card"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="12dp"
        android:layout_marginBottom="16dp"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@android:color/white">

        <ImageView
            android:id="@+id/cricket_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ipl_banner_matches"
            android:alpha="0.6"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cricket"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:fontFamily="@font/poppins_900"
            android:layout_gravity="center"
            android:elevation="12dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/kabaddi_card"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="12dp"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@android:color/white">

        <ImageView
            android:id="@+id/kabaddi_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/kabbai_banner_matches"
            android:alpha="0.6"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kabaddi"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:fontFamily="@font/poppins_900"
            android:layout_gravity="center"
            android:elevation="12dp"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>
