<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_height="match_parent">

    <!-- Kabaddi Title -->
    <TextView
        android:id="@+id/kabaddiTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kabaddi Player Stats"
        android:textStyle="bold"
        android:textSize="18sp"
        android:padding="4dp" />

    <!-- Heading Row for Kabaddi Player Stats -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">

        <TextView
            android:text="Player Name"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <TextView
            android:text="Raid Points"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Tackle Points"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Total Points"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- RecyclerView to display Kabaddi Player Stats -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/kabaddiRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp" />
</LinearLayout>
