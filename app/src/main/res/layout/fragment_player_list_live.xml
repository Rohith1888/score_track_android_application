<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_height="match_parent">

    <!-- Batting Section Title -->
    <TextView
        android:id="@+id/battingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Batting"
        android:textStyle="bold"
        android:textSize="18sp"
        android:padding="4dp" />

    <!-- Heading Row for Batting Stats -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">

        <TextView
            android:text="Player Name"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <TextView
            android:text="Runs"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Balls"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <TextView
            android:text="4's"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <TextView
            android:text="6's"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Strike Rate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- RecyclerView to display Batting Data -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/battingRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp" />

    <!-- Bowling Section Title -->
    <TextView
        android:id="@+id/bowlingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bowling"
        android:textStyle="bold"
        android:textSize="18sp"
        android:padding="8dp" />

    <!-- Heading Row for Bowling Stats -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">

        <TextView
            android:text="Player Name"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <TextView
            android:text="Overs"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Maidens"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Runs"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Wickets"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Economy Rate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- RecyclerView to display Bowling Data -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bowlingRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp" />
</LinearLayout>
